{
  "id": "com.samsung.smart",
  "version": "1.7.3",
  "compatibility": ">=2.0.0",
  "sdk": 2,
  "brandColor": "#206ADF",
  "name": {
    "en": "Samsung SmartTV"
  },
  "description": {
    "en": "Control your Samsung SmartTV"
  },
  "category": [
    "video"
  ],
  "tags": {
    "en": [
      "samsung",
      "tv"
    ]
  },
  "images": {
    "large": "/assets/images/large.png",
    "small": "/assets/images/small.png"
  },
  "permissions": [],
  "author": {
    "name": "Bjørnar Almli",
    "email": "bjornar.almli@gmail.com"
  },
  "contributors": {
    "developers": [
      {
        "name": "Bjørnar Almli",
        "email": "bjornar.almli@gmail.com"
      }
    ]
  },
  "contributing": {
    "donate": {
      "paypal": {
        "username": "bjornaralmli"
      }
    }
  },
  "bugs": {
    "url": "https://github.com/balmli/com.samsung.smart/issues"
  },
  "homeyCommunityTopicId": 10019,
  "source": "https://github.com/balmli/com.samsung.smart",
  "flow": {
    "conditions": [
      {
        "id": "is_app_running",
        "title": {
          "en": "Is app !{{running|not running}}"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=Samsung|SamsungEncrypted"
          },
          {
            "name": "app_id",
            "type": "autocomplete",
            "placeholder": {
              "en": "Search for app..."
            }
          }
        ]
      },
      {
        "id": "is_power_onoff",
        "title": {
          "en": "Power on/off !{{is|is not}} in progress"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=Samsung|SamsungEncrypted|SamsungLegacy"
          }
        ]
      },
      {
        "id": "on",
        "title": {
          "en": "Is turned !{{on|off}}"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=Samsung|SamsungEncrypted|SamsungLegacy"
          }
        ]
      }
    ],
    "actions": [
      {
        "id": "browse",
        "title": {
          "en": "Launch browser"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=Samsung"
          },
          {
            "name": "url",
            "type": "text",
            "title": {
              "en": "URL"
            }
          }
        ]
      },
      {
        "id": "change_channel",
        "title": {
          "en": "Change channel"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=Samsung|SamsungEncrypted|SamsungLegacy"
          },
          {
            "name": "channel",
            "type": "number",
            "min": 1,
            "max": 9999,
            "step": 1,
            "title": {
              "en": "Channel"
            }
          }
        ]
      },
      {
        "id": "launch_app",
        "title": {
          "en": "Launch app"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=Samsung|SamsungEncrypted"
          },
          {
            "name": "app_id",
            "type": "autocomplete",
            "placeholder": {
              "en": "Search for app..."
            }
          }
        ]
      },
      {
        "id": "off",
        "title": {
          "en": "Turn off"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=Samsung|SamsungEncrypted|SamsungLegacy"
          }
        ]
      },
      {
        "id": "on",
        "title": {
          "en": "Turn on"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=Samsung|SamsungEncrypted|SamsungLegacy"
          }
        ]
      },
      {
        "id": "send_key",
        "title": {
          "en": "Send key"
        },
        "hint": {
          "en": "Send key"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=Samsung|SamsungEncrypted|SamsungLegacy"
          },
          {
            "name": "key",
            "type": "autocomplete",
            "placeholder": {
              "en": "Search for key..."
            }
          }
        ]
      },
      {
        "id": "send_keys",
        "title": {
          "en": "Send list of keys"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=Samsung|SamsungEncrypted|SamsungLegacy"
          },
          {
            "name": "keys1",
            "type": "text",
            "title": {
              "en": "List of keys"
            }
          }
        ]
      },
      {
        "id": "set_input_source",
        "title": {
          "en": "Set input source"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=Samsung"
          },
          {
            "name": "input_source",
            "type": "autocomplete",
            "placeholder": {
              "en": "Input source..."
            }
          }
        ]
      },
      {
        "id": "youtube",
        "title": {
          "en": "Launch video on YouTube"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=Samsung|SamsungEncrypted"
          },
          {
            "name": "videoId",
            "type": "text",
            "title": {
              "en": "Provide the YouTube video id"
            }
          }
        ]
      }
    ]
  },
  "drivers": [
    {
      "icon": "/drivers/Samsung/assets/icon.svg",
      "images": {
        "large": "/drivers/Samsung/assets/images/large.png",
        "small": "/drivers/Samsung/assets/images/small.png"
      },
      "class": "tv",
      "capabilities": [
        "onoff",
        "volume_up",
        "channel_up",
        "volume_down",
        "channel_down",
        "volume_mute"
      ],
      "id": "Samsung",
      "name": {
        "en": "Samsung"
      },
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_my_devices"
          }
        },
        {
          "id": "add_my_devices",
          "template": "add_devices"
        }
      ],
      "settings": [
        {
          "type": "group",
          "label": {
            "en": "General settings"
          },
          "children": [
            {
              "id": "ipaddress",
              "type": "text",
              "label": {
                "en": "IP address"
              },
              "value": ""
            },
            {
              "id": "tokenAuthSupport",
              "type": "checkbox",
              "label": {
                "en": "Secure connection"
              },
              "value": false
            },
            {
              "id": "frameTVSupport",
              "type": "checkbox",
              "label": {
                "en": "Frame TV support"
              },
              "value": false
            },
            {
              "id": "poll_interval",
              "type": "number",
              "min": 0,
              "max:": 1000,
              "step": 1,
              "label": {
                "en": "Polling interval for TV status (s)"
              },
              "value": 10
            }
          ]
        },
        {
          "type": "group",
          "label": {
            "en": "Timing"
          },
          "children": [
            {
              "id": "delay_keys",
              "type": "number",
              "min": 1,
              "max:": 5000,
              "step": 1,
              "label": {
                "en": "Delay between keys (ms)"
              },
              "value": 100
            },
            {
              "id": "delay_channel_keys",
              "type": "number",
              "min": 1,
              "max:": 5000,
              "step": 1,
              "label": {
                "en": "Delay between channel keys (ms)"
              },
              "value": 1250
            }
          ]
        },
        {
          "type": "group",
          "label": {
            "en": "SmartThings"
          },
          "children": [
            {
              "id": "smartthings",
              "type": "checkbox",
              "label": {
                "en": "SmartThings API"
              },
              "value": false,
              "hint": {
                "en": "Check this to enable the SmartThings API.  Your TV must be logged on to your Samsung account."
              }
            },
            {
              "id": "smartthings_token",
              "type": "text",
              "label": {
                "en": "API Token"
              },
              "value": "",
              "hint": {
                "en": "Obtain an API key from https://account.smartthings.com/tokens."
              }
            }
          ]
        }
      ]
    },
    {
      "icon": "/drivers/SamsungEncrypted/assets/icon.svg",
      "images": {
        "large": "/drivers/SamsungEncrypted/assets/images/large.png",
        "small": "/drivers/SamsungEncrypted/assets/images/small.png"
      },
      "class": "tv",
      "capabilities": [
        "onoff",
        "volume_up",
        "channel_up",
        "volume_down",
        "channel_down",
        "volume_mute"
      ],
      "id": "SamsungEncrypted",
      "name": {
        "en": "Samsung (encrypted)"
      },
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "pin_wait"
          },
          "options": {
            "singular": true
          }
        },
        {
          "id": "ip_address"
        },
        {
          "id": "pin_wait",
          "template": "loading"
        },
        {
          "id": "set_pin_code",
          "template": "pincode",
          "options": {
            "type": "number"
          }
        },
        {
          "id": "add_my_devices",
          "template": "add_devices"
        }
      ],
      "settings": [
        {
          "type": "group",
          "label": {
            "en": "General settings"
          },
          "children": [
            {
              "id": "ipaddress",
              "type": "label",
              "label": {
                "en": "IP address"
              },
              "value": ""
            },
            {
              "id": "poll_interval",
              "type": "number",
              "min": 0,
              "max:": 1000,
              "step": 1,
              "label": {
                "en": "Polling interval for TV status (s)"
              },
              "value": 10
            }
          ]
        },
        {
          "type": "group",
          "label": {
            "en": "Timing"
          },
          "children": [
            {
              "id": "delay_keys",
              "type": "number",
              "min": 1,
              "max:": 5000,
              "step": 1,
              "label": {
                "en": "Delay between keys (ms)"
              },
              "value": 100
            },
            {
              "id": "delay_channel_keys",
              "type": "number",
              "min": 1,
              "max:": 5000,
              "step": 1,
              "label": {
                "en": "Delay between channel keys (ms)"
              },
              "value": 1250
            }
          ]
        }
      ]
    },
    {
      "icon": "/drivers/SamsungLegacy/assets/icon.svg",
      "images": {
        "large": "/drivers/SamsungLegacy/assets/images/large.png",
        "small": "/drivers/SamsungLegacy/assets/images/small.png"
      },
      "class": "tv",
      "capabilities": [
        "onoff",
        "volume_up",
        "channel_up",
        "volume_down",
        "channel_down",
        "volume_mute"
      ],
      "id": "SamsungLegacy",
      "name": {
        "en": "Samsung (legacy)"
      },
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_my_devices"
          }
        },
        {
          "id": "add_my_devices",
          "template": "add_devices"
        }
      ],
      "settings": [
        {
          "type": "group",
          "label": {
            "en": "General settings"
          },
          "children": [
            {
              "id": "ipaddress",
              "type": "text",
              "label": {
                "en": "IP address"
              },
              "value": ""
            },
            {
              "id": "poll_interval",
              "type": "number",
              "min": 0,
              "max:": 1000,
              "step": 1,
              "label": {
                "en": "Polling interval for TV status (s)"
              },
              "value": 10
            }
          ]
        },
        {
          "type": "group",
          "label": {
            "en": "Timing"
          },
          "children": [
            {
              "id": "delay_keys",
              "type": "number",
              "min": 1,
              "max:": 5000,
              "step": 1,
              "label": {
                "en": "Delay between keys (ms)"
              },
              "value": 100
            },
            {
              "id": "delay_channel_keys",
              "type": "number",
              "min": 1,
              "max:": 5000,
              "step": 1,
              "label": {
                "en": "Delay between channel keys (ms)"
              },
              "value": 1250
            }
          ]
        }
      ]
    }
  ]
}